        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        button:hover:not(:disabled) {
            background-color: #0056b3;
        }

        button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .message {
            margin-top: 15px;
            font-size: 1.2em;
            font-weight: bold;
        }

        /* Estilos dos Dados 3D */
        .dice-container {
            perspective: 800px;
            margin-bottom: 30px;
            height: 60px; /* Espaço para os dados */
        }

        .dice-wrapper {
            display: flex;
            gap: 20px;
            transform-style: preserve-3d;
        }

        .dice {
            width: 50px;
            height: 50px;
            position: relative;
            transform-style: preserve-3d;
            transform: translateZ(-25px);
            transition: transform 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border-radius: 5px;
        }

        .dice.rolling {
            animation: roll-animation 1s infinite;
        }

        @keyframes roll-animation {
            0% { transform: translateZ(-25px) rotateX(0deg) rotateY(0deg) rotateZ(0deg); }
            50% { transform: translateZ(-25px) rotateX(720deg) rotateY(720deg) rotateZ(720deg); }
            100% { transform: translateZ(-25px) rotateX(0deg) rotateY(0deg) rotateZ(0deg); }
        }

        .face {
            position: absolute;
            width: 50px;
            height: 50px;
            background: #ffffff;
            border: 1px solid #333;
            box-sizing: border-box;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px;
        }

        .dot {
            width: 8px;
            height: 8px;
            background: #333;
            border-radius: 50%;
            position: absolute;
        }

        /* Posições das faces */
        .front { transform: rotateY(0deg) translateZ(25px); }
        .back { transform: rotateY(180deg) translateZ(25px); }
        .right { transform: rotateY(90deg) translateZ(25px); }
        .left { transform: rotateY(-90deg) translateZ(25px); }
        .top { transform: rotateX(90deg) translateZ(25px); }
        .bottom { transform: rotateX(-90deg) translateZ(25px); }

        /* Posições dos pontos (dots) */
        /* Face 1 */
        .face-1 .dot-c { position: static; }
        /* Face 2 */
        .face-2 .dot-tl { top: 10px; left: 10px; }
        .face-2 .dot-br { bottom: 10px; right: 10px; }
        /* Face 3 */
        .face-3 .dot-tl { top: 10px; left: 10px; }
        .face-3 .dot-c { position: static; }
        .face-3 .dot-br { bottom: 10px; right: 10px; }
        /* Face 4 */
        .face-4 .dot-tl { top: 10px; left: 10px; }
        .face-4 .dot-tr { top: 10px; right: 10px; }
        .face-4 .dot-bl { bottom: 10px; left: 10px; }
        .face-4 .dot-br { bottom: 10px; right: 10px; }
        /* Face 5 */
        .face-5 .dot-tl { top: 10px; left: 10px; }
